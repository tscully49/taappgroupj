<% provide(:title, 'Log in') %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <title>COMPUTER SCIENCE DEPARTMENT</title>


  <link rel="stylesheets" type="text/css" href="log.css.scss" media="all">

  <script type="text/javascript" src="view.js"></script>
  <script type="text/javascript" src="calendar.js"></script>
</head>
<body id="main_body">
  <div class="container">
        <%= form_for(:session, url: login_path, :html => {:id => "signup"}) do |f| %>
          <div class="header">
            <h3>Log In</h3>
          </div>

          <div class="sep"></div>

          <div class="form-horizontal center">
            <div class="form-group">
            <%= f.label :email, :class => "control-label" %>
            <%= f.email_field :email, :class => "form-control" %>
            </div>

            <div class="form-group">
            <%= f.label :password, :class => "control-label" %>
            <%= f.password_field :password, :class => "form-control" %>
            </div>

            <div class="col-md-12">
              <div class="col-md-4">
                <%= link_to "New User", "users/new", :class => "btn btn-default", :method => :get %>
              </div>
              <div class="col-md-4 col-md-offset-4">
                <%= f.submit "Log in", class: "btn btn-primary" %>
              </div>
            </div>
          </div> <!-- CLOSE DIV form horizontal center -->
        <% end %>

      </div>
    </div>
  </div>
  <%= debug(params) if Rails.env.development? %>
</body>
</html>
