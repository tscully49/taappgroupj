<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for (@users) do |f| %> <!--, url: user_path, :html => {class: 'form_dark'} do |f| %>-->
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
    <%= button_to "Go Back", "/", :class => "button", :method => :get %>
    
    <% if @users.errors.any? %>
	<ul class="Signup_Errors">
		<% for message_error in @users.errors.full_messages %>
			<li><%= message_error %></li>
	  	<% end %>
	</ul>
	  	<% end %>
  </div>
</div>
