<% provide(:title, 'Sign up') %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>COMPUTER SCIENCE DEPARTMENT</title>


<link rel="stylesheets" type="text/css" href="log.css.scss" media="all">

<script type="text/javascript" src="view.js"></script>
<script type="text/javascript" src="calendar.js"></script>
</head>
<body id ="main_body">

<div class="container">

    <%= form_for @user, :url => users_path(@user), :html => {:id => "signup"} do |f| %>
      <div class="header">
        <h3>Sign up</h3>
      </div>
      <%=render 'shared/user_error_messages' %>
      <div class="sep"></div>

      <div class="form-horizontal center">
        <div class="form-group">
          <%= f.label :first_name, :class => 'control-label' %>
          <!--<div class="col-md-12">-->
          <%= f.text_field :first_name, :class => "form-control"%>
          <!--</div>-->
        </div>

        <div class="form-group">
          <%= f.label :last_name, :class => 'control-label' %>
          <!--<div class="col-md-12">-->
          <%= f.text_field :last_name, :class => "form-control"%>
          <!--</div>-->
        </div>

        <div class="form-group">
          <%= f.label :student_id, "Student ID", :class => 'control-label' %>
          <!--<div class="col-md-12">-->
          <%= f.text_field :student_id, :class => "form-control"%>
          <!--</div>-->
        </div>

        <div class="form-group">
          <%= f.label :email, :class => 'control-label' %>
          
          <%= f.email_field :email, :class => "form-control" %>

        </div>

        <div class="form-group">
          <%= f.label :password, :class => 'control-label' %>
          
          <%= f.password_field :password, :class => "form-control" %>
          
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmation", :class => 'control-label' %>
          
          <%= f.password_field :password_confirmation, :class => "form-control" %>
          
        </div>

        <div class="col-md-12 col-sm-12">
        <div class="col-md-4 col-sm-12">
          <%= link_to "Go Back", "/", :class => "btn btn-default", :method => :get %>
        </div>
        <div class="col-md-4 col-md-offset-2 col-sm-4 col-sm-offset-2">
          <%= f.submit "Create my account", class: "btn btn-primary" %>
        </div>
        </div>
      </div> <!-- END form-horizontal center DIV -->
    <% end %>

  <!-- This is an error test for a bad signup
    <% if @user.errors.any? %>
	<ul class="Signup_Errors">
		<% for message_error in @user.errors.full_messages %>
			<li><%= message_error %></li>
	  	<% end %>
	</ul>
	  	<% end %>
  <!-- End of the error testing -->

  </div> <!-- End container -->
<%= debug(params) if Rails.env.development? %>
</body>
</html>
