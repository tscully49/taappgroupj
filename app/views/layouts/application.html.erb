<!DOCTYPE html>
<html>
<head>
  <%#<title>  TA application | <%= yield(:title) </title>%>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	
	<%= if session[:accounttype].present?
		    form_for(:session, :url => url_for(controller: 'sessions', action: 'destroy')) do |f|
		    	f.submit "Log Out", id: "logout", class: "btn btn-primary"
		    end
		  end %>
  
  <% if flash[:color]== "valid" %>
		<div class="valid_notice">
			<p><%= flash[:notice]%></p>
		</div>
	<% elsif flash[:color]== "invalid"%>
		<div class="invalid_notice">
			<p><%=flash[:notice]%></p>
		</div>
	<%else%>
		<div class="notice">
			<p><%=flash[:notice]%></p>
		</div>
	<%end%>
<%= yield %>

</body>
</html>
