<% provide(:title, 'Delete Course') %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>COMPUTER SCIENCE DEPARTMENT</title>


<link rel="stylesheets" type="text/css" href="log.css.scss" media="all">

<script type="text/javascript" src="view.js"></script>
<script type="text/javascript" src="calendar.js"></script>
</head>
<body id ="main_body">

<div class="container">

    <%= form_for @course, :url => url_for(:controller => 'courses', :action => 'delete'), :html => {:id => "signup"} do |f| %>
      
      <div class="header">
        <h3> Delete a course</h3>
      </div>
      <div class="sep"></div>

      <div class="form-horizontal center">
        <div class="form-group">
          <%= f.label :course_name, :class => 'control-label' %>
          <!--<div class="col-md-12">-->
          <%= f.text_field :course_name, :class => "form-control"%>
          <!--</div>-->
        </div>

        <div class="form-group">
          <%= f.label 'Select the Professor', :class => 'control-label' %>
          <%= collection_select(:professor, :prof_id, Professor.all,:id,:prof_name, {:include_blank => true}) %>
        </div>

        <div id="midle_button" class="center col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-4 col-xs-offset-4">
          <%= f.submit "Delete course", class: "btn btn-primary"  %>
        </div>
        </div>
      </div> <!-- END form-horizontal center DIV -->
      <%= debug(params) if Rails.env.development? %>
    <% end %>

</body>
</html>

